@model EmployeeQuiz.Models.Employee

@{
 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/StyleSheet2.css" />
    <title>WorkerView</title>
</head>
<body>
    <center><h1 class="letra">Empresa Zuly y Asociados S.A de C.V</h1></center>
    <div>

     @{
         
     try{
          <center>
        <table border="1">
        <tr>
            <td>
                <center>
        <img src="@Url.Content(Model.PhotoPath)"
            alt="Sample Image"
            width="100" height="150" /></center>
            </td>
        </tr>

        <tr>
        <td>
        <p>
            <b>ID:</b>@Model.Id
        </p>
        </td>
        </tr>

        <tr>
        <td>
